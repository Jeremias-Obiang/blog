

<section class=" newsletter">
    <div class="div-container">              
        <form action="/suscribe" method="post" >
            <div class="row">
                <div class="col-md-6">
                    <h2>DON'T MISS OUT!</h2>
                    <p>Receive the latest posts via email</p>
                </div>
                <div class="col-md-6 no-padding">
                    <div class="col">
                        <input type="text" name="firstName" id="" placeholder="Your first name" required>
                    </div>
                    <div class="col">
                        <input type="text" name="lasttName" id="" placeholder="Your last name" required>
                    </div>
                    <div class="col">
                        <input type="email" name="email" id="" placeholder="Your email" required>
                    </div>
                    <div class="col">
                        <p>
                            <input type="submit" value="suscribe">
                        </p>
                    </div>
                    <div class="col">
                        <% if(locals.error) {%>
                            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                                <strong><%= locals.error %> </strong>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                  <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        <%} else if(locals.success){%>
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <strong><%= locals.success %> </strong>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                  <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        <%}%>  
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
            



            
