<section class="carousel" style="overflow: hidden; margin-top: 2rem;">
    <div id="carouselExampleIndicators" class="carousel slide " data-interval="10000" data-ride="carousel">
        
        <div class="carousel-inner" id="carousel-inner">
            <% data.forEach(post => { %>
                <div class="carousel-item">
                    <img class="d-block w-100" src="<%= post.image %>" alt="First slide">
                    <div class="cover">
                        <div class="container header-content">
                            <div class="category">
                                <a href="/post/<%= post.id %>"><%= post.category %> </a>
                            </div>
                            <h2 class="title">
                                <a href="/post/<%= post.id %>"><%= post.title %></a>
                            </h2>
                        </div>
                    </div>
                </div>
            <%})%>

            
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

</section>